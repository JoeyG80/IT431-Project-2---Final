<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - George Mason University</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        $(window).bind('scroll', function () {
            if ($(window).scrollTop() > 500) {
                $('.navbar').addClass('navbar-fixed-top');
            } else {
                $('.navbar').removeClass('navbar-fixed-top');
            }
        });
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <img class="customLeft" src="~/Content/gmulogo.png" alt="place holder image" style="width:3.7%;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("George Mason University", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Apply", "Create", "Applicants")</li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin")){
                        <li>@Html.ActionLink("Applicants", "index", "Applicants")</li>
                        <li>@Html.ActionLink("Administration", "Index", "Admin")</li>
                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>2018 George Mason University. 4400 University Drive, Fairfax, Virginia 22030</p>
            <p><a href="tel:703-993-1000">Phone: 703-993-1000</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
